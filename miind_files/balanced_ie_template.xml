<Simulation>
     <WeightType>CustomConnectionParameters</WeightType>
     <Algorithms>
          <Algorithm type="GridAlgorithm" name="COND" modelfile="$sim_dir.model" tau_refractive="0.0" transformfile="${sim_dir}_0_0_0_0_.tmat" start_v="-0.070" start_w="0.0" >
               <TimeStep>$timestep</TimeStep>
          </Algorithm>
		  <Algorithm type="RateAlgorithm" name="ExcitatoryInput">
               <rate>80000.</rate>
          </Algorithm>
          <Algorithm type="RateAlgorithm" name="InhibitoryInput">
               <rate>15000.</rate>
          </Algorithm>
          <Algorithm type="OUAlgorithm" name="CorticalBackground">
               <NeuronParameter>
                    <t_membrane>20e-3</t_membrane>
                    <t_refractive>0</t_refractive>
                    <V_threshold>-55e-3</V_threshold>
                    <V_reversal>-70e-3</V_reversal>
               </NeuronParameter>
          </Algorithm>
     </Algorithms>
     <Nodes>
          $exc_input
          $inh_input
          <Node algorithm="COND" name="E" type="EXCITATORY_DIRECT" />
          <Node algorithm="COND" name="I" type="INHIBITORY_DIRECT" />
     </Nodes>
     <Connections>
          $exc_input_conn
          $inh_input_conn
          <Connection In="E" Out="E" num_connections="$exc_connections" efficacy="$randomEE" delay="0.001"/>
          <Connection In="I" Out="I" num_connections="$inh_connections" efficacy="$randomII" delay="0.001"/>
          <Connection In="E" Out="I" num_connections="$exc_connections" efficacy="$randomEI" delay="0.001"/>
          <Connection In="I" Out="E" num_connections="$inh_connections" efficacy="$randomIE" delay="0.001"/>
          <OutgoingConnection Node="E"/>
          <OutgoingConnection Node="I"/>
     </Connections>
     <Reporting>
          <Rate node="E" t_interval="0.001" />
          <Rate node="I" t_interval="0.001" />
     </Reporting>
     <SimulationRunParameter>
          <SimulationName>$sim_dir</SimulationName>
          <t_end>$simulation_time</t_end>
          <t_step>$timestep</t_step>
          <name_log>$sim_dir.log</name_log>
     </SimulationRunParameter>
</Simulation>