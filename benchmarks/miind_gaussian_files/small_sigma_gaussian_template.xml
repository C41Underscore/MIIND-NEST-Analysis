<!-- ${details} -->
<Simulation>
	<WeightType>CustomConnectionParameters</WeightType>
	<Algorithms>
		<Algorithm type="MeshAlgorithmCustom" name="LIF" modelfile="${model_file}">
			<TimeStep>0.001</TimeStep>
			<MatrixFile>${mat_file}</MatrixFile>
		</Algorithm>
		<Algorithm type="RateFunctor" name="ExcInput">
			<expression>${exc_rate}</expression>
		</Algorithm>
	</Algorithms>
	<Nodes>
		<Node algorithm="LIF" name="E" type="EXCITATORY"/>
		<Node algorithm="ExcInput" name="Background" type="EXCITATORY"/>
	</Nodes>
	<Connections>
		<Connection In="Background" Out="E" num_connections="1" efficacy="${h}" delay="0.001"/>
	</Connections>
	<Reporting>
		<Rate Node="E" t_interval="0.001"/>
	</Reporting>
	<SimulationRunParameter>
		<SimulationName>${sim_name}</SimulationName>
		<t_end>1.0</t_end>
		<t_step>0.001</t_step>
		<name_log>${sim_name}.log</name_log>
	</SimulationRunParameter>
</Simulation>
